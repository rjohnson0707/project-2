<%- include('../partials/header'); %>

<section id="sections">
  <section id="centerSection">
    <h2>Enter a New Hike</h2>
    <form action="/hikes" method="POST">
        <label>Name:
          <input type="text" name="name">
        </label><br>
        <label>Address(City, State):
          <input type="text" name="address">
        </label><br>
        <label>Description:
            <textarea name="description"></textarea>
        </label><br>
        <label>Leash:
          <select name="leash">
            <option value="On-Leash">On-Leash</option>
            <option value="Off-Leash">Off-Leash</option>
          </select>
        </label><br>
        <label>Attach Website URL:
          <input type="text" name="site">
        </label>
        <input type="submit" value="Add Hike">
    </form>
    <a href="/hikes">Back to Hikes</a>
</section>
</section>
    
<%- include('../partials/footer'); %>