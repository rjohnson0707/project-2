<%- include('../partials/header'); %>

<section id="sections">
  <section id="centerSection">
    <h2>Edit <%= hike.name %></h2>
    <form action="/hikes/<%= hike._id %>?_method=PUT" method="POST">
        <label>Name:
          <input type="text" name="name" value="<%= hike.name %>">
        </label><br>
        <label>Address(City, State):
          <input type="text" name="address" value="<%= hike.address %>">
        </label><br>
        <label>Description:
            <textarea name="description"><%= hike.description %></textarea>
        </label><br>
        <label>Leash:
          <select name="leash">
            <option value="OnLeash">On-Leash</option>
            <option value="OffLeash">Off-Leash</option>
          </select>
        </label><br>
        <label>Attach Website URL:
          <input type="text" name="site" value="<%= hike.site %>">
        </label>
        <input type="submit" value="Update">
    </form>
    <a href="/hikes">Back to Hikes</a>
</section>
</section>
    
<%- include('../partials/footer'); %>