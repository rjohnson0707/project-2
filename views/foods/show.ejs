<%- include('../partials/header') %>

<section id="sections">
  <section id="separate">
    <div id="infoDiv" class="mainName">Name: <%= food.name %></div>
    <div id="infoDiv">Address: <%= food.address %></div>
    <div id="infoDiv">Description: <%= food.description %></div>
</section>
</section>
<br>
<div>
  <% if (user._id.equals(food.createdBy[0])) { %>
    <a href="/foods/<%= food._id %>/edit">Edit Location?</a>
    <br><br>
    <form action="/foods/<%= food._id %>?_method=DELETE" method="POST">
      <button type="submit">DELETE LOCATION</button>
    </form>
    <% } %>
  </div>
  <br><br>
  <a href="/foods">Back to Locations</a>
<br><br><br>
<h2>Reviews</h2>
<form method="POST"
  action="/foods/<%= food._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (food.reviews.length) { %>
  <table>
    <thead>
      <tr>
      	 <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% var total = 0 %>
      <% food.reviews.forEach(function(f) { %>
        <% total += f.rating %>
        <tr>
          <td><%= f.createdAt.toLocaleDateString() %></td>
          <td><%= f.content %></td>
          <td><%= f.rating %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / food.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>