<%- include('../partials/header') %>

<section id="sections">
  <section id="separate">
    <div id="infoDiv" class="mainName">Name: <%= health.name %></div>
    <div id="infoDiv">Address: <%= health.address %></div>
    <div id="infoDiv">Type of Location: <%= health.type %></div>
    <div id="infoDiv">Description: <%= health.description %></div>
</section>
</section>
<br>
<div>
  <% if (user._id.equals(health.createdBy[0])) { %>
    <a href="/health/<%= health._id %>/edit">Edit Location?</a>
    <br><br>
    <form action="/health/<%= health._id %>?_method=DELETE" method="POST">
      <button type="submit">DELETE LOCATION</button>
    </form>
    <% } %>
  </div>
  <br><br>
  <a href="/health">Back to Locations?</a>
<br><br><br>
<h2>Reviews</h2>
<form method="POST"
  action="/health/<%= health._id %>/reviews">
  <label>Name:</label>
  <select name="name">
    <option value="<%= user.name %>"><%= user.name %></option>
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (health.reviews.length) { %>
  <table>
    <thead>
      <tr>
         <th>Date</th>
         <th>Name</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% var total = 0 %>
      <% health.reviews.forEach(function(h) { %>
        <% total += h.rating %>
        <tr>
          <td><%= h.createdAt.toLocaleDateString() %></td>
          <td><%= h.name %></td>
          <td><%= h.content %></td>
          <td><%= h.rating %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / health.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>