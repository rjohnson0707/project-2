<%- include('../partials/header') %>

<section id="sections">
  <section id="separate">
    <div id="infoDiv" class="mainName">Name: <%= park.name %></div>
    <div id="infoDiv">Address: <%= park.address %></div>
    <div id="infoDiv">Description: <%= park.description %></div>
    <div id="infoDiv">Leash Required: <%= park.leash ? 'Yes' : 'No' %></div>
  </section>
</section>
<br>
<div>
  <% if (user._id.equals(park.createdBy[0])) { %>
    <a href="/parks/<%= park._id %>/edit">Edit Park?</a>
    <br><br>
    <form action="/parks/<%= park._id %>?_method=DELETE" method="POST">
      <button type="submit">DELETE PARK</button>
    </form>
    <% } %>
  </div>
  <br><br>
  <a href="/parks">Back to Parks</a>
<br><br><br><h2>Reviews</h2>
<form method="POST"
  action="/parks/<%= park._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>

<% if (park.reviews.length) { %>
  <table>
    <thead>
      <tr>
      	 <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% var total = 0 %>
      <% park.reviews.forEach(function(p) { %>
        <% total += p.rating %>
        <tr>
          <td><%= p.createdAt.toLocaleDateString() %></td>
          <td><%= p.content %></td>
          <td><%= p.rating %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / park.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>