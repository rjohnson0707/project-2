<%- include('../partials/header') %>
<section id="sections">
  <section id="background">

    <h1 class="location-header A">Here is the current list of UpDog Dog Parks</h1>
    <h3 class="location-header">Don't forget, UpDog is a Community App! <br> Know of a Dog Park that is not on here?<br><a href="/parks/new">ADD PARK HERE</a>
     </h3>
     <div class="tbl-header">
     <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Hike Name</th>
          <th>Hike Location</th>
          <th>Description</th>
          <th>Leash</th>
          <th>Details</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% parks.forEach(function(park) { %>
          <tr>
            <td><%= park.name %></td>
            <td><%= park.address %></td>
            <td><%= park.description %></td>
            <td><%= park.leash %></td>
            <td><a href="/parks/<%= park._id %>">Information</a></td>
        </tr>
          <% }); %>  
      </tbody>
    </table>
    </section>
</section>
<%- include('../partials/footer') %>